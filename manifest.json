{
    "name": "DDG Plugin",
    "version": "0.1",
    "manifest_version": 2,
    "description": "This is a test Chrome Extention",
    "options_page": "options.html",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": ["popup.js","options.js"] // Required to make popup.js persistant.
    },
    
    "permissions": [
        "storage"
    ],

    "content_scripts": [
        {
          //"matches": ["https://www.google.co.uk/*"],
          "matches": ["https://duckduckgo.com/*"],
          //"js": ["script.js"]
          "js": ["script-duckduckgo.js"]
        }
      ]
}